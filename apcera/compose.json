      },
      "env": {
        "NATS_URI": "nats://nats-main.apcera.local:4222",
        "GATLING_TO_NATS_SUBJECT": "INPUT"
      },
      "start": {
        "cmd": "/opt/gatling/bin/gatling.sh --no-reports -s com.logimethods.nats.demo.NatsInjection",
        "timeout" : 30
      },
      "state": "started"
    },
    
