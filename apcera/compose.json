    "job::/sandbox/admin::nats-main": {
      "docker": {
        "image": "nats:0.9.2"
      },
      "exposed_ports": [ 4222, 8222, 6222 ],
      "routes": [
        {
          "type": "http",
          "endpoint": "auto",
          "config": {
            "/*": [ { "port": 8222 } ]
