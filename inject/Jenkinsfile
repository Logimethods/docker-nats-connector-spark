// Jenkinsfile for Inject
pipeline {
  agent {
    kubernetes {
      cloud "openshift"
      label 'skopeo-pod'
      inheritFrom "maven"
      containerTemplate {
        name 'jnlp'
        image "hseeberger/scala-sbt"
        command ''
        resourceRequestMemory '1Gi'
        resourceLimitMemory '2Gi'
      }
    }
  }
  options { retry(3) }
  stages {
    stage('INJECT Build') {
      steps {
        container('jnlp') {
          dir('inject') {
            sh "sbt clean assembly dockerFileTask"
            sh "rm -R ./docker"
            sh "mv target/docker ."
            sh "ls -als"
          }
        }
      }
    }
  }
}