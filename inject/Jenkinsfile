// Jenkinsfile for Inject
// @See https://issues.jenkins-ci.org/browse/JENKINS-48421
pipeline {
  kubernetes {
    containers {
      container {
        name 'sbt'
        image 'hseeberger/scala-sbt'
      }
    }
  }
  agent none
  stages {
    stage('INJECT Build') {
      agent {
        container {
          name 'sbt'
        }
      }
      steps {
        sh 'sbt version'
      }
    }
  }
}