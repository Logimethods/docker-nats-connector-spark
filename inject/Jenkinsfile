// Jenkinsfile for Inject
pipeline {
  agent {
    docker {
        image 'hseeberger/scala-sbt'
    }
  }
  options { retry(3) }
  stages {
    stage('INJECT Build') {
      steps {
        container('scala-sbt') {
          dir('inject') {
            sh "sbt clean assembly dockerFileTask"
            sh "rm -R ./docker"
            sh "mv target/docker ."
            sh "ls -als"
          }
        }
      }
    }
  }
}